<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry location="/data/appdatas/mysql-connector-java-5.1.18.jar" />

    <context id="slb" targetRuntime="MyBatis3">
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"></plugin>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"></plugin>
        <commentGenerator>
            <property name="suppressDate" value="true" />
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
            connectionURL="jdbc:mysql://192.168.22.71:3306/phoenix-lb?useUnicode=true&amp;characterEncoding=utf8&amp;zeroDateTimeBehavior=convertToNull&amp;noAccessToProcedureBodies=true"
            userId="root" password="root">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>
        <javaModelGenerator targetPackage="com.dianping.phoenix.lb.deploy.model"
            targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>
        <sqlMapGenerator targetPackage="com.dianping.phoenix.lb.deploy.dao"
            targetProject="./src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>
        <javaClientGenerator type="XMLMAPPER"
            targetPackage="com.dianping.phoenix.lb.deploy.dao"
            targetProject="./src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table tableName="deployment_task">
            <columnOverride column="deploy_policy"
                javaType="com.dianping.phoenix.lb.deploy.model.DeployPolicy"
                jdbcType="VARCHAR" />
            <columnOverride column="error_policy"
                javaType="com.dianping.phoenix.lb.deploy.model.ErrorPolicy"
                jdbcType="VARCHAR" />
            <columnOverride column="status"
                javaType="com.dianping.phoenix.lb.deploy.model.DeployStatus"
                jdbcType="VARCHAR" />
        </table>
        <table tableName="deployment_detail">
        </table>
        <table tableName="deployment">
        </table>


    </context>



</generatorConfiguration>
